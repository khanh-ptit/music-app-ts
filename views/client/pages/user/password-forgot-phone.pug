extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center 
            .col-8
                h1.text-center Lấy lại mật khẩu
                form(
                    action="/user/password/forgot-phone"
                    method="POST"
                )
                    div(class="form-group mt-3")
                        label(for="phone") Số điện thoại
                        input(
                            type="text"
                            id="phone"
                            name="phone"
                            class="form-control"
                            required
                            placeholder="Nhập số điện thoại"
                        )
                    div(class="form-group d-flex justify-content-between")
                        a(href="/user/password/forgot") Bạn không nhớ số điện thoại? Dùng email tại đây
                    div(class="form-group")
                        button(
                            class="btn btn-primary"
                            type="submit"
                            style="width: 100%"
                        ) Xác nhận
