extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/filter-status.pug
include ../../mixins/form-search.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/sort.pug
include ../../mixins/pagination.pug

block main 
    +alert-success(5000)
    +alert-error(5000)
    h1.mb-3 Danh sách chủ đề

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
            .row
                .col-6 
                    +filter-status(filterStatus)
                .col-6
                    +form-search()

    +sort()

    .card.mb-3 
        .card-header Danh sách 
        .card-body 
            .row 
                .col-8
                    +form-change-multi(`${prefixAdmin}/topics/change-multi?_method=PATCH`, 'topics') 
                .col-4
                    a(
                        href=`${prefixAdmin}/topics/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới

    .card.mb-3 
        .card-header Danh sách chủ đề
        .card-body 
            table(
                class="table table-hover table-sm"
                checkbox-multi
            )
                thead 
                    tr 
                        th 
                            input(type="checkbox" name="checkall")
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Vị trí
                        th Trạng thái
                        th Hành động
                tbody
                    each item, index in topics
                        tr 
                            td 
                                input(
                                    type="checkbox"
                                    value=item.id 
                                    name="id"
                                )
                            td #{index + 1}
                            td
                                img(src=item.avatar 
                                    alt=item.title
                                    width="100px" 
                                    height="auto")
                            td #{item.title}
                            td 
                                input(
                                    type="number"
                                    value=item.position 
                                    style="width: 60px"
                                    min="1"
                                    name="position"
                                )
                            td
                                if (item.status == "active")
                                    a(
                                        href="javascript:;" 
                                        data-status="active"
                                        data-id=item.id
                                        button-change-status
                                        class="badge badge-success") Hoạt động
                                else 
                                    a(
                                        href="javascript:;"
                                        data-status="inactive"
                                        data-id=item.id
                                        button-change-status
                                        class="badge badge-danger") Dừng hoạt động
                            td
                                a(
                                    href=`${prefixAdmin}/topics/detail/${item.id}`
                                    class="btn btn-secondary btn-sm"
                                ) Chi tiết
                                a(
                                    href=`${prefixAdmin}/topics/edit/${item.id}`
                                    class="btn btn-warning btn-sm ml-1"
                                ) Sửa
                                button(
                                    class="btn btn-danger btn-sm ml-1"
                                    button-delete 
                                    data-id=item.id
                                ) Xóa

    +pagination(pagination)                         

    form(
        action=``
        method="POST"
        form-change-status 
        data-path=`${prefixAdmin}/topics/change-status`
    )

    form(
        action=``
        method="POST"
        form-delete-item 
        data-path=`${prefixAdmin}/topics/delete`
    )

    script(src="/admin/js/topic.js") 
