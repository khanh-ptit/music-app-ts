extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/form-search.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)
    h1 Danh sách bài hát

    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body
                .row
                    .col-6
                        +filter-status(filterStatus)
                    .col-6 
                        +form-search()

    //- +sort()

    .card.mb-3
        .card-header Danh sách
        .card-body
                .row
                    .col-8
                        +form-change-multi(`${prefixAdmin}/songs/change-multi?_method=PATCH`, 'songs')
                    .col-4 
                        a(
                            href=`${prefixAdmin}/songs/create`
                            class="btn btn-outline-success"
                        ) + Thêm mới


    .card.mb-3 
        .card-header Danh sách bài hát
            .card-body 
                table(
                    class="table table-hover table-sm"
                    checkbox-multi
                )
                    thead
                        tr
                            th 
                                input(type="checkbox" name="checkall")
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            //- th Vị trí
                            th Trạng thái
                            th Hành động
                    tbody
                        each item, index in songs
                            tr
                                td 
                                    input(
                                        type="checkbox"
                                        name="id"
                                        value=item.id
                                    )
                                td #{index + 1}
                                td
                                    img(src=item.avatar 
                                        alt=item.title
                                        width="100px" 
                                        height="auto")
                                td #{item.title}
                                //- td 
                                //-     input(
                                //-         type="number"
                                //-         value=item.position 
                                //-         style="width: 60px"
                                //-         min="1"
                                //-         name="position"
                                //-     )
                                td
                                    if (item.status == "active")
                                        a(
                                            href="javascript:;" 
                                            data-status="active"
                                            data-id=item.id
                                            button-change-status
                                            class="badge badge-success") Hoạt động
                                    else 
                                        a(
                                            href="javascript:;"
                                            data-status="inactive"
                                            data-id=item.id
                                            button-change-status
                                            class="badge badge-danger") Dừng hoạt động
                                td
                                    a(
                                        href=`${prefixAdmin}/songs/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                    ) Chi tiết
                                    a(
                                        href=`${prefixAdmin}/songs/edit/${item.id}`
                                        class="btn btn-warning btn-sm ml-1"
                                    ) Sửa
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        button-delete 
                                        data-id=item.id
                                    ) Xóa


    //- +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/songs/change-status`
    )

    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/songs/delete`
    )

    script(src="/admin/js/song.js") 