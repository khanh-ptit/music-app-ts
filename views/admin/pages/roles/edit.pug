extends ../../layouts/default.pug

block main 
    h1.mb-4 Chỉnh sửa nhóm quyền

    form(
        action=`${prefixAdmin}/roles/edit/${role.id}?_method=PATCH`
        method="POST"
    )
        div(class="form-group")  
            label(for="title") Tiêu đề
            input(
                type="text"
                name="title"
                class="form-control"
                id="title"
                value=role.title
            )
        div(class="form-group")
            label(for="description") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="description"
                name="description"
                rows="5"
            ) !{role.description}
        div(class="form-group")
            button(
                class="btn btn-primary"
                type="submit"
            ) Cập nhật

