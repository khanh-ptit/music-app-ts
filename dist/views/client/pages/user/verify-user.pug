extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center 
            .col-8
                h1.text-center Nhập mã OTP xác thực
                form(
                    action="/user/verify-user"
                    method="POST"
                )
                    div(class="form-group mt-3")
                        label(for="email") Email 
                        input(
                            type="email"
                            id="email"
                            name="email"
                            value=email
                            class="form-control"
                            required
                            readonly
                        )
                    div(class="form-group")
                        label(for="otp") Mã OTP
                        input(
                            type="text"
                            class="form-control"
                            id="otp"
                            name="otp"
                            required
                        )
                    div(class="form-group d-flex justify-content-between align-items-center mt-3")
                        span.text-muted OTP sẽ hết hạn sau: 
                        span.text-danger.font-weight-bold(id="countdownTimer") 03:00
                    div(class="form-group text-right")
                        a(
                            href="/user/verify-email"
                        ) Chưa nhận được OTP? Gửi lại
                    div(class="form-group")
                        button(
                            class="btn btn-primary"
                            type="submit"
                            style="width: 100%"
                        ) Xác nhận