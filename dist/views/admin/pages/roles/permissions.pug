extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-success(5000)
    +alert-error(5000)

    h1(class="mb-3") Phân quyền

    if (roles)
        div(data-records=roles)
        div(class="text-right")
            button(
                type="submit"
                class="btn btn-primary mb-3"
                button-submit
            ) Cập nhật

        table(
            class="table table-hover table-sm"
            table-permissions
        )
            thead 
                tr 
                    th Tính năng 
                    each item in roles 
                        th(class="text-center") #{item.title}
            tbody 
                tr(data-name="id" class="d-none")
                    td 
                    each item in roles 
                        td(class="text-center")
                            input(type="text" value=item.id)
                //- Danh sách chủ đề
                tr 
                    td(colspan="4")
                        b Danh mục chủ đề
                tr(data-name="topic_view")
                    td Xem 
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="topic_create")
                    td Thêm mới
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="topic_edit")
                    td Chỉnh sửa
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="topic_delete")
                    td Xóa
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                //- Danh sách bài hát
                tr 
                    td(colspan="4")
                        b Danh mục bài hát
                tr(data-name="song_view")
                    td Xem 
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="song_create")
                    td Thêm mới
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="song_edit")
                    td Chỉnh sửa
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="song_delete")
                    td Xóa
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                //- Danh sách bài hát
                tr 
                    td(colspan="4")
                        b Danh mục ca sĩ
                tr(data-name="singer_view")
                    td Xem 
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="singer_create")
                    td Thêm mới
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="singer_edit")
                    td Chỉnh sửa
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="singer_delete")
                    td Xóa
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                //- Nhóm quyền
                tr 
                    td(colspan="4")
                        b Nhóm quyền
                tr(data-name="role_view")
                    td Xem 
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="role_create")
                    td Thêm mới
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="role_edit")
                    td Chỉnh sửa
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="role_delete")
                    td Xóa
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="role_permissions")
                    td Phân quyền
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")

                //- Tài khoản
                tr 
                    td(colspan="4")
                        b Tài khoản admin
                tr(data-name="account_view")
                    td Xem 
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="account_create")
                    td Thêm mới
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="account_edit")
                    td Chỉnh sửa
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="account_delete")
                    td Xóa
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr 
                    td(colspan="4")
                        b Tài khoản client
                tr(data-name="user_view")
                    td Xem 
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")
                tr(data-name="user_create")
                    td Thêm mới
                    each item in roles
                        td(class="text-center")
                            input(type="checkbox")

    else 
        a(
            href=`${prefixAdmin}/roles/create`
            class="btn btn-outline-success"
        ) Tạo nhóm quyền

    form(
        id="form-change-permissions"
        method="POST"
        action=`${prefixAdmin}/roles/permissions?_method=PATCH`
    )
        div(class="form-group")
            input(
                type="text"
                class="form-control d-none"
                name="permissions"
            )
    
    script(src="/admin/js/role.js") 
